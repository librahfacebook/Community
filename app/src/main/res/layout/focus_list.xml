<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/focusHeadImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ler"/>
    <TextView
        android:id="@+id/focusNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/focusHeadImageView"
        android:layout_marginStart="10dp"
        android:layout_centerInParent="true"
        android:text="小明"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/focusIntroduceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:text="人生能有几回搏，此时不搏何时搏"
        android:textSize="10sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/focusHeadImageView"
        android:background="#000">
    </View>


</RelativeLayout>